<%= attachment_image_tag @product, :image, :fill, 60, 60, fallback: "no_image.jpg" %>

<%= @product.name %>

<% @taxed_price = @product.price * 1.1 %>
¥<%= @taxed_price.floor %>(税込)

<%= form_with model: @cart_product, url: member_cart_products_path, local: true do |f| %>

	<%= f.select :quantity, options_for_select(1..10), include_blank: "-----" %>

	<%= f.hidden_field :member_id, value: current_member.id %>

  <%= f.hidden_field :product_id, value: @product.id %>

  <%= f.submit "カートに追加" %>

<% end %>
