<h1>配送先登録・一覧</h1>

<%= form_with model: @delivery, url: member_deliveries_path, local: true do |f| %>
	<%= f.label :郵便番号 %><br>
	<%= f.text_field :post_code %><br>

	<%= f.label :住所 %><br>
	<%= f.text_field :address %><br>

	<%= f.label :宛名 %><br>
	<%= f.text_field :name %><br>

	<%= f.submit "登録する" %>
<% end %>

	<table>
		<thead>
			<tr>
				<th>郵便番号</th>
				<th>住所</th>
				<th>宛名</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% @deliveries.each do |delivery| %>
				<tr>
					<td><%= delivery.post_code %></td>
					<td><%= delivery.address %></td>
					<td><%= delivery.name %></td>
					<td>
						<%= link_to "編集する", edit_member_delivery_path(delivery) %>
						<%= link_to "削除する", member_delivery_path(delivery), method: :delete, data: { confirm: "本当に削除しますか？" } %>
					</td>
				</tr>
		</tbody>
	</table>
<% end %>
