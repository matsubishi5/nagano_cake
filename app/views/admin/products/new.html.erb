<h1>商品新規登録画面</h1>

<%= form_with model: @product, url: admin_products_path, local: true do |f| %>
	<div>
		<%= f.label :商品画像 %>
		<%= f.attachment_field :image %>
	</div>

	<div>
		<%= f.label :商品名 %>
		<%= f.text_field :name %>
	</div>

	<div>
		<%= f.label :商品説明 %>
		<%= f.text_area :introduction %>
	</div>

  <div>
    <%= f.label :ジャンル %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-----" %>
  </div>

	<div>
		<%= f.label :税抜価格 %>
		<%= f.text_field :price %>円
	</div>

  <div>
    <%= f.label :販売ステータス %>
		<%= f.select :is_valid, [["販売中", "販売中"], ["売り切れ", "売り切れ"]], include_blank: "-----" %>
  </div>

	<div>
		<%= f.submit "新規登録" %>
	</div>
<% end %>
