<h1>商品一覧</h1>

<%= link_to "新規登録", new_admin_product_path %>

<table>
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>

	<tbody>
		<% @products.each do |product| %>
			<tr>
				<td><%= product.id %></td>
				<td><%= product.name %></td>
				<td><%= product.price %></td>
				<td><%= product.genre.name %></td>
				<td><%= product.is_valid %></td>
			</tr>
		<% end %>
	</tbody>
</table>
