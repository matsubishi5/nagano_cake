<h1>ジャンル追加・一覧画面</h1>

<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>

	<%= f.label :ジャンル %>
	<%= f.text_field :name %>

  <%= f.radio_button :is_valid, "有効" %>
  <%= f.label :有効 %>

	<%= f.radio_button :is_valid, "無効" %>
  <%= f.label :無効 %>

	<%= f.submit "追加" %>

<% end %>

<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.name %></td>
				<td><%= genre.is_valid %></td>
				<td><%= link_to "編集", edit_admin_genre_path(genre) %></td>
				<td><%= link_to "削除", admin_genre_path(genre), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
			</tr>
		<% end %>
	</tbody>
</table>