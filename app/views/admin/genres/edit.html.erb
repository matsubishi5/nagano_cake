<h1>ジャンル編集画面</h1>

<%= form_with model: @genre, url: admin_genre_path(@genre), local: true do |f| %>

	<%= f.label :ジャンル %>
	<%= f.text_field :name %>

  <%= f.radio_button :is_valid, "有効" %>
  <%= f.label :有効 %>

	<%= f.radio_button :is_valid, "無効" %>
  <%= f.label :無効 %>

	<%= f.submit "変更" %>

<% end %>
