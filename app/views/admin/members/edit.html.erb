<h1>会員編集画面</h1>

<%= label_tag :会員ID %>
<%= @member.id %>

<%= form_with model: @member, url: admin_member_path(@member), local: true do |f| %>
	<%= f.label :氏名 %>
	<%= f.text_field :first_name %>
	<%= f.text_field :last_name %><br>

	<%= f.label :フリガナ %>
	<%= f.text_field :reading_first_name %>
	<%= f.text_field :reading_last_name %><br>

	<%= f.label :郵便番号 %>
	<%= f.text_field :post_code %><br>

	<%= f.label :住所 %>
	<%= f.text_field :address %><br>

	<%= f.label :電話番号 %>
	<%= f.text_field :telephone_number %><br>

	<%= f.label :メールアドレス %>
	<%= f.text_field :email %><br>

	<%= f.label :会員ステータス %>
	<%= f.radio_button :is_valid, "有効" %>
	<%= f.label :有効 %>
	<%= f.radio_button :is_valid, "退会済" %>
	<%= f.label :退会済 %><br>

	<%= f.submit "変更を保存する" %>
<% end %>