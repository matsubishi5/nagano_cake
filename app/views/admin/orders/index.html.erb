<h1>注文一覧画面</h1>

<table>
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>

	<tbody>
		<% @orders.each do |order| %>
			<tr>
				<td><%= link_to order.created_at, admin_order_path(order) %></td>
				<td><%= order.member.full_name %></td>
				<td>
					<% @total_quantity = 0 %>
					<% order.order_products.each do |order_product| %>
						<% @total_quantity += order_product.quantity %>
					<% end %>
					<%= @total_quantity %>
				</td>
				<td><%= order.order_status %></td>
			</tr>
		<% end %>
	</tbody>
</table>